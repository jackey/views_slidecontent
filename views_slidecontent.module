/**
 * Implementation of hook_views_api().
 */
function views_slidecontent_views_api() {
  return array(
    'api' => 2.0,
    'path' => drupal_get_path('module', 'views_slidecontent') . '/views',
  );
}

/**
 * views_slide_content: Preprocess function for the slide content.
 */
