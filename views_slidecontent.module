}

/**
 * Define options settings form for views_slidecontent plugin.
 */
function views_slidecontent_options_form(&$form, &$form_state) {
  $form['queue'] = array(
    '#type' => 'select',
    '#options' => array('under' => 'under', 'up' => 'up', 'left' => 'left', 'right' => 'right'),
    '#title' => t('The queue order'),
    '#description' => t(''),
  );
}